#include <stdio.h>
#include <stdlib.h>
int Jump(int, int);
int main()
{
    printf("Hello world!\n");
    int s = 0, y = 0, sum = 0;
    printf("请输入石柱数：s = ");
    scanf("%d", &s);
    printf("请输入荷叶数： y = ");
    scanf("%d", &y);
    sum = Jump(s, y);
    printf("Jump(%d, %d) = %d \n", s, y, sum);
    return 0;
}
int Jump(int r, int z)
{
    int k = 0;
    if(r==0)
    {
        k = z + 1;
    }
    else
    {
        k = 2*Jump(r-1, z);
    }
    return (k);
}
